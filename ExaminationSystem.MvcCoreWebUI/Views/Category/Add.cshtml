@model Category

@{
    ViewData["Title"] = "Kategori Ekle";
}

<div class="col-md-4"></div>

<div class="col-md-4">
    <form asp-action="Add" asp-controller="Category">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label class="control-label">Kategori Adı</label>
            <input asp-for="CategoryName" class="form-control" />
            <span asp-validation-for="CategoryName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="control-label">Sınıf Seçiniz</label>
            <select asp-for="ClassLevelId" asp-items="@ViewBag.ClassLevel" class="form-control"></select>
            <span asp-validation-for="ClassLevelId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Ekle" class="btn btn-default" />
        </div>
    </form>
</div>