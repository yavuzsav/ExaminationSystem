@model ExamViewModel
@{
    ViewData["Title"] = "Deneme Sınavı";
}

<form asp-action="FinishExam" asp-controller="Exam" method="post">
    <div class="col-md-12">
        <div class="card">
            @for (int i = 0; i < Model.Questions.Count; i++)
            {

                <div>
                    <label>
                        @*@Model[i].Question.QuestionContent*@
                        @Model.Questions[i].QuestionContent
                    </label>
                </div>
                <div>
                    <label>
                        <input type="radio" asp-for="@Model.UserAnswers[i]" value="A"> @Model.Questions[i].A
                    </label>
                </div>
                <div>
                    <label>
                        <input type="radio" asp-for="@Model.UserAnswers[i]" value="B"> @Model.Questions[i].B
                    </label>
                </div>
                <div>
                    <label>
                        <input type="radio" asp-for="@Model.UserAnswers[i]" value="C"> @Model.Questions[i].C
                    </label>
                </div>
                <div>
                    <label>
                        <input type="radio" asp-for="@Model.UserAnswers[i]" value="D"> @Model.Questions[i].D
                    </label>
                </div>
                <div>
                    <label>
                        <input type="radio" asp-for="@Model.UserAnswers[i]" value="" checked="checked"> Boş
                    </label>
                </div>
                <input type="hidden" asp-for="@Model.Questions[i].Id" />
                <br />
                <br />
            }
        </div>
    </div>

    <input type="submit" value="Bitir" class="btn btn-info" />
</form>