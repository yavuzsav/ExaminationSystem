<!doctype html>
<html>
<head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/png" href="/assets/img/favicon.ico">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />

    <title>Sınav Sistemi</title>

    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
    <meta name="viewport" content="width=device-width" />

    <!-- Bootstrap core CSS     -->
    <link href="~/assets/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Animation library for notifications   -->
    <link href="~/assets/css/animate.min.css" rel="stylesheet" />
    <!--  Light Bootstrap Table core CSS    -->
    <link href="~/assets/css/light-bootstrap-dashboard.css?v=1.4.0" rel="stylesheet" />
    <!--     Fonts and icons     -->
    <link href="http://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
    <link href="~/assets/css/pe-icon-7-stroke.css" rel="stylesheet" />

    <!--   Core JS Files   -->
    <script src="~/assets/js/jquery.3.2.1.min.js" type="text/javascript"></script>
    <script src="~/assets/js/bootstrap.min.js" type="text/javascript"></script>

    <!--  Charts Plugin -->
    <script src="~/assets/js/chartist.min.js"></script>
    <!--  Notifications Plugin    -->
    <script src="~/assets/js/bootstrap-notify.js"></script>
    <!-- Light Bootstrap Table Core javascript and methods for Demo purpose -->
    <script src="~/assets/js/light-bootstrap-dashboard.js?v=1.4.0"></script>
    <!-- Light Bootstrap Table DEMO methods, don't include it in your project! -->
    <script src="~/assets/js/demo.js"></script>
</head>
<body>

    <style>

        .dropdown {
            position: relative;
            display: inline-block;
        }

        .dropdown-menu {
            display: none;
            position: absolute;
            background-color: #ffffff;
            color: #000000;
            min-width: 160px;
            box-shadow: 0px 8px 16px 0px #000000;
            padding: 12px 16px;
            z-index: 1;
        }

        .sidebar .nav li {
            color: #FFFFFF;
        }

        .sidebar-wrapper .nav .dropdown-menu li > a {
            color: #000000;
            margin: 5px 15px;
            opacity: .86;
            border-radius: 4px;
            display: block;
        }

        .dropdown-menu > li > a:hover,
        .dropdown-menu > li > a:focus {
            color: #000000;
            opacity: 1;
            text-decoration: none;
        }
    </style>

    <div class="wrapper">
        <div class="sidebar" data-color="azure" data-image="/assets/img/sidebar-5.jpg">

            <!--

                Tip 1: you can change the color of the sidebar using: data-color="blue | azure | green | orange | red | purple"
                Tip 2: you can also add an image using data-image tag

            -->

            <div class="sidebar-wrapper">
                <div class="logo">
                    <a class="simple-text">
                        Sınav Sistemi
                    </a>
                </div>

                <ul class="nav">
                    <li>
                        <a asp-action="Index" asp-controller="Home">
                            <i class="fa fa-home"></i>
                            <p>Ana Sayfa</p>
                        </a>
                    </li>

                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <i class="fa fa-user"></i>
                                <p>
                                    Kullanıcı
                                    <b class="caret"></b>
                                </p>
                            </a>
                            <ul class="dropdown-menu">
                                <li><a asp-action="Index" asp-controller="User">Tüm Kullanıcılar</a></li>
                                <li><a asp-action="Admins" asp-controller="User">Yöneticiler Listesi</a></li>
                                <li><a asp-action="Students" asp-controller="User">Öğrenciler Listesi</a></li>
                                <li><a asp-action="Index" asp-controller="User">Yetki Ata</a></li>
                                <li class="divider"></li>
                                <li><a asp-controller="Note" asp-action="GetAll">Tüm Sonuçlar</a></li>
                            </ul>
                        </li>

                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <i class="fa fa-pie-chart"></i>
                                <p>
                                    Kategori
                                    <b class="caret"></b>
                                </p>
                            </a>
                            <ul class="dropdown-menu">
                                <li><a asp-action="Index" asp-controller="Category">Tüm Kategoriler</a></li>
                                <li><a asp-action="Add" asp-controller="Category">Kategori Ekle</a></li>
                            </ul>
                        </li>

                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <i class="fa fa-users"></i>
                                <p>
                                    Sınıf
                                    <b class="caret"></b>
                                </p>
                            </a>
                            <ul class="dropdown-menu">
                                <li><a asp-action="Index" asp-controller="ClassLevel">Tüm Sınıflar</a></li>
                                <li><a asp-action="Add" asp-controller="ClassLevel">Sınıf Ekle</a></li>
                            </ul>
                        </li>

                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <i class="fa fa-question"></i>
                                <p>
                                    Soru
                                    <b class="caret"></b>
                                </p>
                            </a>
                            <ul class="dropdown-menu">
                                <li><a asp-action="Index" asp-controller="Question">Tüm Sorular</a></li>
                                <li><a asp-action="Index" asp-controller="Category">Kategorilere Göre Sorular</a></li>
                                <li><a asp-action="Add" asp-controller="Question">Soru Ekle</a></li>
                                <li class="divider"></li>
                                <li><a asp-action="Index" asp-controller="ExamParameter">Sınav Parametreleri</a></li>
                            </ul>
                        </li>

                        <li>
                            <a asp-controller="Exam" asp-action="Index">
                                <i class="fa fa-quora"></i>
                                <p>Deneme Sınavı</p>
                            </a>
                        </li>

                        <li>
                            <a asp-controller="Home" asp-action="Config">
                                <i class="fa fa-cog"></i>
                                <p>Ayarlar</p>
                            </a>
                        </li>

                        <li>
                            <a asp-controller="User" asp-action="SignOut" asp-route-returnUrl="/Home/Index">
                                <i class="fa fa-sign-out"></i>
                                <p>Çıkış</p>
                            </a>
                        </li>
                    }
                    else if (User.Identity.IsAuthenticated && User.IsInRole("Student"))
                    {
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <i class="fa fa-user"></i>
                                <p>
                                    Kullanıcı
                                    <b class="caret"></b>
                                </p>
                            </a>
                            <ul class="dropdown-menu">
                                <li><a asp-action="GetAllByUser" asp-controller="Note">Sonuçlarım</a></li>
                            </ul>
                        </li>

                        <li>
                            <a asp-controller="Exam" asp-action="Index">
                                <i class="fa fa-quora"></i>
                                <p>Deneme Sınavı</p>
                            </a>
                        </li>

                        <li>
                            <a asp-controller="Home" asp-action="Config">
                                <i class="fa fa-cog"></i>
                                <p>Ayarlar</p>
                            </a>
                        </li>

                        <li>
                            <a asp-controller="User" asp-action="SignOut" asp-route-returnUrl="/Home/Index">
                                <i class="fa fa-sign-out"></i>
                                <p>Çıkış</p>
                            </a>
                        </li>
                    }
                    else
                    {
                        <li>
                            <a asp-controller="User" asp-action="Login">
                                <i class="fa fa-sign-in"></i>
                                <p>Giriş Yap</p>
                            </a>
                        </li>
                        <li>
                            <a asp-controller="User" asp-action="Register">
                                <i class="fa fa-user-plus"></i>
                                <p>Kayıt Ol</p>
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>

        <div class="main-panel">
            <nav class="navbar navbar-default navbar-fixed">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand">@ViewBag.Title</a>
                    </div>
                    <div class="collapse navbar-collapse">
                        <ul class="nav navbar-nav navbar-left">
                            <li>
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                    <i class="fa fa-dashboard"></i>
                                </a>
                            </li>
                        </ul>

                        @if (User.Identity.IsAuthenticated)
                        {
                            <ul class="nav navbar-nav navbar-right">
                                <li>
                                    <a href="">
                                        @User.Identity.Name
                                    </a>
                                </li>
                            </ul>
                        }
                    </div>
                </div>
            </nav>

            <div class="content">
                <div class="row col-md-12">
                    @RenderBody()
                </div>
            </div>

            <footer class="footer">
                <div class="container-fluid">
                    <nav class="pull-left">
                    </nav>
                    <p class="copyright pull-right">
                        &copy;
                        <script>document.write(new Date().getFullYear())</script>
                    </p>
                </div>
            </footer>
        </div>
    </div>
</body>
</html>