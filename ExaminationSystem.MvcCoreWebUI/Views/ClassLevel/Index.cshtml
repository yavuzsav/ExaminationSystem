@model ClassLevelListViewModel

@{
    ViewData["Title"] = "Tüm Sınıflar";
}

<div class="content table-responsive">
    <table id="dataTable" class="table table-hover table-striped">
        <thead>
        <th class="text-center">Sınıf Adı</th>
        <th class="text-center">Açıklama</th>
        <th class="text-center">İşlemler</th>
        </thead>
        <tbody>
            @foreach (var classLevel in Model.ClassLevels)
            {
                <tr class="text-center">
                    <td>@classLevel.ClassLevelName</td>
                    <td>@classLevel.Description</td>
                    <td>
                        <a class="btn btn-info" asp-action="Update" asp-controller="ClassLevel" asp-route-id="@classLevel.Id">Güncelle</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-controller="ClassLevel" asp-route-id="@classLevel.Id">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script src="~/assets/js/dataTableApp.js"></script>