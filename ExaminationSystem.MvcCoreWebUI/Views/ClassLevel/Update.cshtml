@model ClassLevel
@{
    ViewData["Title"] = "Sınıf Güncelle";
}

<div class="col-md-8">
    <div class="card">
        <div class="header">
            <h4 class="title">Sınıf Ekle</h4>
        </div>
        <div class="content">
            <form asp-action="Update" asp-controller="ClassLevel">
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Sınıf Adı</label>
                            <input type="text" class="form-control" asp-for="ClassLevelName">
                            <span asp-validation-for="ClassLevelName" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Açıklama</label>
                            <input type="text" class="form-control" asp-for="Description">
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <button type="submit" class="btn btn-info btn-fill pull-right">Güncelle</button>
                <div class="clearfix"></div>
            </form>
        </div>
    </div>
</div>